local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")
local player = Players.LocalPlayer

-- Garantir que o PlayerGui existe
local playerGui = player:WaitForChild("PlayerGui")

-- Criar ScreenGui se não existir
local screenGui = playerGui:FindFirstChild("MobileUI")
if not screenGui then
    screenGui = Instance.new("ScreenGui")
    screenGui.Name = "MobileUI"
    screenGui.ResetOnSpawn = false
    screenGui.Parent = playerGui
end

-- Criar o botão APENAS NO CELULAR
if UIS.TouchEnabled then
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0, 200, 0, 70)
    btn.Position = UDim2.new(0.5, -100, 0.8, 0)
    btn.Text = "Rodar"
    btn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Parent = screenGui

    btn.MouseButton1Click:Connect(function()
        print("BOTÃO MOBILE FUNCIONANDO!")
    end)
end
